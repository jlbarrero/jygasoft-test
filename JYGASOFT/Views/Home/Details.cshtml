

@model IEnumerable<JYGASOFT.Models.Pago>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Pagos";
}

<div class="">
    <h5 class="card-header">Listado de pr&eacute;stamos</h5>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered first">
                <thead>
                    <tr>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Monto
                        </th>

                        <th>
                            Per&iacute;odo de Pago
                        </th>
                        <th>
                            Fecha
                        </th>
                        <th>
                            Status
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (JYGASOFT.Models.Pago item in (ViewBag.Pagos as IEnumerable<JYGASOFT.Models.Pago>))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Deudor.nombre)
                                </td>
                                <td>
                                    $@Html.DisplayFor(modelItem => item.cantidad)
                                </td>
                                <th>
                                </th>
                                <td>
                                    @Html.DisplayFor(modelItem => item.fecha)
                                </td>
                                <td>
                                    @if (item.interes == true)
                                    {
                                        <label class="custom-control custom-checkbox custom-control-inline">
                                            <input type="checkbox" class="custom-control-input" checked="checked" disabled>
                                        </label>
                                    }
                                    else
                                    {
                                        <label class="custom-control custom-checkbox custom-control-inline">
                                            <input type="checkbox" class="custom-control-input" disabled><span class="custom-control-label"></span>
                                        </label>
                                    }
                                </td>
                            </tr>
                        }
                    @for (int i = 0; i < ViewBag.cant_filas; i++)
                    {
                        
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Volver", "Index")
</p>
