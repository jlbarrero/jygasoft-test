@model IEnumerable<JYGASOFT.Models.Deudor>

@{
    ViewBag.Title = "Inicio";
}

<div>

</div>

<div>
    <h5 class="card-header">Listado de pr&eacute;stamos</h5>
    <div class="card-body">
        <div class="table-responsive">

            <table class="table table-striped table-bordered first">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido P</th>
                        <th>Apellido M</th>
                        <th>Cant. Prestada</th>
                        <th>Tel&eacute;fono</th>
                        <th>Email</th>
                        <th>Fecha de P.</th>
                        <th>Dia Cobro</th>
                        <th>Meses del Pres.</th>
                        <th>Interes</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var itm in Model)
                    {
                        <tr>
                            <th>
                                @itm.nombre
                            </th>
                            <th>
                                @itm.apell_pat
                            </th>
                            <th>
                                @itm.apell_mat
                            </th>
                            <th>
                                $@itm.cant_p
                            </th>
                            <th>
                                @itm.telef
                            </th>
                            <th>
                                @itm.email
                            </th>
                            <th>
                                @itm.fecha_p
                            </th>
                            <th>
                                @itm.dia_c
                            </th>
                            <th>
                                @itm.meses_p
                            </th>
                            <th>
                                $@itm.intereses
                            </th>
                            <th>

                                <a href="@Url.Action("Edit", new { id = itm.Id })">
                                    <span class="fas fa-edit" data-toggle="tooltip" data-placement="bottom" title="Edtar deudor"></span>
                                </a> |
                                <a href="@Url.Action("Details", new { id = itm.Id })">
                                    <span class="far fa-money-bill-alt" data-toggle="tooltip" data-placement="bottom" title="Ver pagos realizados por deudor"></span>
                                </a>|
                                <a href="@Url.Action("Delete", new { id = itm.Id })">
                                    <span class="fas fa-trash-alt" data-toggle="tooltip" data-placement="bottom" title="Eliminar deudor"></span>
                                </a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div>
    <h5 class="card-header">Detalles de deudas</h5>
    <div class="card-body">
        <div class="table-responsive">

            <table class="table table-striped table-bordered first">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Monto que debe</th>
                        <th>Monto pago</th>
                        <th>Monto Final</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.detallesDeudas.Count > 0)
                    {
                        Console.WriteLine(ViewBag.detallesDeudas.Count);
                        foreach (var itm in (ViewBag.detallesDeudas as IEnumerable<JYGASOFT.Models.Deudas>))
                        {
                            <tr>
                                <th>
                                    @itm.Nombre
                                </th>
                                <th>
                                    @itm.Email
                                </th>
                                <th>
                                   $@itm.Monto_debe
                                </th>
                                <th>
                                    $@itm.Monto_pago
                                </th>
                                <th>
                                    $@itm.Monto_final
                                </th>
                            </tr>
                        }

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>