<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - JYGASOFT</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/style.css" type="text/css" rel="stylesheet"/>
    <link href="~/Content/concept/buttons.bootstrap4.css" type="text/css" rel="stylesheet"/>
    <link href="~/Content/concept/dataTables.bootstrap4.css" type="text/css" rel="stylesheet"/>
    <link href="~/Content/concept/fixedHeader.bootstrap4.css" type="text/css" rel="stylesheet"/>
    <link href="~/Content/concept/select.bootstrap4.css" type="text/css" rel="stylesheet"/>
    <link href="~/Content/font/fontawesome/css/fontawesome-all.css" type="text/css" rel="stylesheet" />
</head>
<body>
    <div class="dashboard-main-wrapper m-r-5 m-l-25">
        <div class="dashboard-header">
            <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
                @Html.ActionLink("Inicio", "Index", "Home")
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            @Html.ActionLink(linkText: "Adicionar Préstamo", actionName: "Create", controllerName: "Home", routeValues: new { }, htmlAttributes: new { @class = "nav-link" })
                        </li>
                        <li class="nav-item active">
                            @Html.ActionLink(linkText: "Adicionar Pago", actionName: "Create", controllerName: "Pago", routeValues: new { }, htmlAttributes: new { @class = "nav-link" })
                        </li>
                    </ul>
                    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                        <div class="text-md-right footer-links d-none d-sm-block">
                            @Html.ActionLink("Acerca de", "About", "Home", null, new { @class = "rigth-aside" })  |
                            @Html.ActionLink("Contacto", "Contact", "Home", null, new { @class = "rigth-aside" })
                        </div>
                    </div>
                    
                    
                </div>
            </nav>
        </div>

        <div class="dashboard>
            <div class="influence-profile">
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="page-header">
                            @RenderBody()

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                    Copyright © 2018 Concept. All rights reserved. Dashboard by <a href="https://colorlib.com/wp/">Colorlib</a>.
                </div>
                
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/angular.js" type="text/javascript"></script>
    <script src="~/Scripts/paggination.js" type="text/javascript"></script>
</body>
</html>
